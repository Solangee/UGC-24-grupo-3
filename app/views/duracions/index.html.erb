<p id="notice"><%= notice %></p>

<h1>Duracions</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @duracions.each do |duracion| %>
      <tr>
        <td><%= duracion.nombre %></td>
        <td><%= link_to 'Show', duracion %></td>
        <td><%= link_to 'Edit', edit_duracion_path(duracion) %></td>
        <td><%= link_to 'Destroy', duracion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

